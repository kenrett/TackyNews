<div class="container">
  <h1><%= @post.title %></h1>
  <p><%= @post.content %></p>

  <%= @error if @error %><br><br>
  <form action="/comment/<%= @post.id %>" method='post'>
    <input type="text" name="content" placeholder='Comment' required>
    <input type="submit" value="Say it!">
  </form>

  <% @post.comments.each do |comment| %>
    <br><%= comment.content %> <br><br>
  <% end %>
</div>


